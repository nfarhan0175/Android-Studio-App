<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="WebViewLayout">
        <WebView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/video"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:text="Video 1 : Inheritence | Polymorphism | Abstraction"
            android:padding="10dp"
            android:textSize="20sp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="20dp"
            app:cardCornerRadius="10dp"
            android:padding="16dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/video2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                orientation="horizontal"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp"
                tools:ignore="MissingPrefix">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Video 2 : Simple select query using alies | joins"
                    android:textSize="20sp"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="0dp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/play"
                    android:src="@drawable/baseline_play_circle_filled_24"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="20dp"
            app:cardCornerRadius="10dp"
            android:padding="16dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/video3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                orientation="horizontal"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_margin="10dp"
                tools:ignore="MissingPrefix">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Video 3 : Simple select query using alies | joins"
                    android:textSize="20sp"/>
                <View
                    android:layout_width="10dp"
                    android:layout_height="0dp"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_play_circle_filled_24"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>